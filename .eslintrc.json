{
    "plugins": ["node"],
    "extends": ["eslint:recommended", "plugin:node/recommended"],
    "env": {
        "es6": true,
        "node": true,
        "jasmine": true
    },
    "parserOptions": {
        "sourceType": "script",
        "ecmaVersion": 7
    },
    "rules": {
        "getter-return": 2,
        "no-template-curly-in-string": 2,
        "no-console": 1,

        "block-scoped-var": 2,
        "no-alert": 1,
        "no-else-return": 2,
        "no-eval": 1,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-extra-label": 2,
        "no-param-reassign": 2,
        "no-proto": 2,
        "no-unused-expressions": 2,
        "no-with": 2,
        "prefer-promise-reject-errors": 2
    }
}
