{
    "name": "smogon-usage-fetch",
    "version": "4.3.1",
    "description": "NodeJS API to fetch smogon usage stats",
    "main": "./dist/smogon-usage-fetch.common.js",
    "module": "./dist/esm/src/main.js",
    "types": "./dist/esm/src/main.d.ts",
    "rollupOptions": {
        "moduleName": "smogonUsageFetch",
        "outputName": "smogon-usage-fetch",
        "external": [
            "node-fetch",
            "cheerio",
            "lodash"
        ],
        "globals": {
            "node-fetch": "fetch",
            "cheerio": "$",
            "lodash": "_"
        }
    },
    "scripts": {
        "start": "npm run dist",
        "dist": "npm-run-all clean lint build test docs",
        "clean": "rimraf ./dist ./spec/dist ./docs",
        "build": "npm-run-all build:tsc build:bundle",
        "build:tsc": "tsc --build ./tsconfig.json",
        "build:bundle": "rollup -c rollup.config.js",
        "watch": "tsc --build ./tsconfig.json -w",
        "lint": "eslint ./src/ ./spec/src/ --ext .ts",
        "fix": "eslint ./src/ ./spec/src/ --ext .ts --fix",
        "test": "jasmine",
        "docs": "jsdoc -c jsdoc.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/smogon-usage-fetch.git"
    },
    "keywords": [
        "smogon",
        "pokemon",
        "api"
    ],
    "author": "Felix Rilling",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FelixRilling/smogon-usage-fetch/issues"
    },
    "homepage": "https://github.com/FelixRilling/smogon-usage-fetch#readme",
    "dependencies": {
        "cheerio": "^1.0.0-rc.3",
        "lightdash": "^11.1.2",
        "lodash": "^4.17.15",
        "node-fetch": "^2.6.0"
    },
    "devDependencies": {
        "@types/cheerio": "^0.22.15",
        "@types/jasmine": "^3.5.0",
        "@types/lodash": "^4.14.149",
        "@types/node-fetch": "^2.5.4",
        "@typescript-eslint/eslint-plugin": "^2.13.0",
        "@typescript-eslint/parser": "^2.13.0",
        "docdash": "^1.1.1",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-prettier": "^3.1.2",
        "jasmine": "^3.5.0",
        "jsdoc": "^3.6.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.0",
        "rollup": "^1.27.14",
        "rollup-plugin-node-resolve": "^5.2.0",
        "typescript": "^3.7.4"
    }
}
