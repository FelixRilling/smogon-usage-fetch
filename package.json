{
    "name": "smogon-usage-fetch",
    "version": "4.3.2",
    "description": "NodeJS API to fetch smogon usage stats",
    "main": "./dist/smogon-usage-fetch.common.js",
    "module": "./dist/esm/src/main.js",
    "types": "./dist/esm/src/main.d.ts",
    "rollupOptions": {
        "moduleName": "smogonUsageFetch",
        "outputName": "smogon-usage-fetch",
        "external": [
            "axios",
            "cheerio",
            "lodash"
        ],
        "globals": {
            "axios": "axios",
            "cheerio": "$",
            "lodash": "_"
        }
    },
    "scripts": {
        "start": "npm run dist",
        "dist": "npm-run-all lint build test docs",
        "build": "npm-run-all clean:dist build:tsc build:bundle",
        "build:tsc": "tsc --build ./tsconfig.json",
        "build:bundle": "rollup -c rollup.config.js",
        "watch": "tsc --build ./tsconfig.json -w",
        "lint": "eslint ./src/ ./spec/src/ --ext .ts",
        "fix": "eslint ./src/ ./spec/src/ --ext .ts --fix",
        "test": "npm-run-all clean:test build:tsc test:jasmine",
        "test:jasmine": "jasmine --require=source-map-support/register",
        "docs": "npm-run-all clean:docs docs:typedoc",
        "docs:typedoc": "typedoc ./src/",
        "clean:dist": "rimraf ./dist",
        "clean:test": "rimraf ./spec/dist",
        "clean:docs": "rimraf ./docs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/smogon-usage-fetch.git"
    },
    "keywords": [
        "smogon",
        "pokemon",
        "api"
    ],
    "author": "Felix Rilling",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FelixRilling/smogon-usage-fetch/issues"
    },
    "homepage": "https://github.com/FelixRilling/smogon-usage-fetch#readme",
    "dependencies": {
        "axios": "^0.19.2",
        "cheerio": "^1.0.0-rc.3",
        "lightdash": "^12.0.0-0",
        "lodash": "^4.17.15"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^7.1.1",
        "@types/cheerio": "^0.22.17",
        "@types/jasmine": "^3.5.10",
        "@types/lodash": "^4.14.149",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-prettier": "^3.1.2",
        "jasmine": "^3.5.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.2",
        "rimraf": "^3.0.2",
        "rollup": "^2.3.0",
        "source-map-support": "^0.5.16",
        "ts-mockito": "^2.5.0",
        "typedoc": "^0.17.3",
        "typescript": "^3.8.3"
    }
}
